{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": [
			"es2022",
			"DOM"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}